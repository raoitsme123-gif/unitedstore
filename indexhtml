<script>
// Mobile menu toggle
const mobileMenuBtn=document.getElementById('mobileMenuBtn');
const mobileMenu=document.getElementById('mobileMenu');
mobileMenuBtn.addEventListener('click',()=>{ mobileMenu.classList.toggle('hidden'); });

// Store data (localStorage)
let storeData=JSON.parse(localStorage.getItem('uft_store'))||{
  categories:['Sofa','Bed','Dining'],
  subs:{'Sofa':['2 Seater','3 Seater'],'Bed':['Single','Double','King'],'Dining':['4 Seater','6 Seater']},
  products:[
    {title:'Classic Sofa', price:350, img:'https://images.unsplash.com/photo-1616628188340-6f206fdf21e2', category:'Sofa', sub:'2 Seater'},
    {title:'Modern Bed', price:450, img:'https://images.unsplash.com/photo-1600180758895-0d7ee2a8b4b2', category:'Bed', sub:'Double'},
    {title:'Dining Table', price:299, img:'https://images.unsplash.com/photo-1586190848861-99aa4a171e90', category:'Dining', sub:'4 Seater'}
  ],
  homepage:{bannerImg:'https://images.unsplash.com/photo-1616628188340-6f206fdf21e2', bannerTitle:'Welcome to United Furniture Traders', bannerSubtitle:'Best quality furniture in UK | Cash on Delivery', bannerBtn:'Shop Now', bannerBtnLink:'products.html#productGrid'}
};

// Render Banner
function renderBanner(){
  const heroBanner=document.getElementById('heroBanner');
  const b=storeData.homepage;
  heroBanner.innerHTML=`
    <div class='relative h-64 md:h-96 rounded overflow-hidden' style='background-image:url(${b.bannerImg}); background-size:cover; background-position:center;'>
      <div class='absolute inset-0 bg-black bg-opacity-40 flex flex-col justify-center items-center text-center text-white px-4'>
        <h1 class='text-3xl md:text-5xl font-bold mb-2'>${b.bannerTitle}</h1>
        <p class='text-sm md:text-lg mb-4'>${b.bannerSubtitle}</p>
        <a href='${b.bannerBtnLink}' class='bg-yellow-500 text-white px-6 py-3 rounded font-bold hover:bg-yellow-400'>${b.bannerBtn}</a>
      </div>
    </div>`;
}

// Render Featured Products
function renderFeaturedProducts(){
  const container=document.getElementById('featuredProducts');
  container.innerHTML='';
  storeData.products.slice(0,6).forEach(p=>{
    const card=document.createElement('div');
    card.className='bg-white rounded-xl shadow hover:shadow-lg transition';
    card.innerHTML=`
      <img src='${p.img}' class='h-56 w-full object-cover rounded-t-xl' />
      <div class='p-4'>
        <h4 class='font-bold text-lg'>${p.title}</h4>
        <p class='text-sm text-gray-600'>${p.category} | ${p.sub}</p>
        <p class='font-semibold mt-2'>£${p.price}</p>
        <a href='https://wa.me/447000000000?text=I want to order ${encodeURIComponent(p.title)}' target='_blank' class='block bg-green-500 text-white text-center mt-2 py-2 rounded font-bold text-sm'>Order on WhatsApp</a>
      </div>`;
    container.appendChild(card);
  });
}

renderBanner();
renderFeaturedProducts();
</script>
</body>
